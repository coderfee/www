---
import { getCollection } from 'astro:content';
import PostCard from '@/components/blog/PostCard.astro';
import BaseLayout from '@/components/layouts/BaseLayout.astro';

const allPosts = await getCollection('blog');

const posts = allPosts
  .filter(({ data: { draft = false } }) => !draft)
  .sort(({ data: { date: dateA } }, { data: { date: dateB } }) => dateB.valueOf() - dateA.valueOf());

const postsByYear = posts.reduce(
  (acc, post) => {
    const year = new Date(post.data.date).getFullYear();
    if (!acc[year]) {
      acc[year] = [];
    }
    acc[year].push(post);
    return acc;
  },
  {} as Record<number, typeof posts>,
);

const years = Object.keys(postsByYear)
  .map(Number)
  .sort((a, b) => b - a);
---

<BaseLayout title="归档" description="所有归档文章">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 py-12 sm:py-16 mt-8">
    <main class="space-y-12">
      {years.map((year) => (
          <section id={`year-${year}`} class="space-y-0">
            <h2 class="text-2xl font-semibold text-zinc-900 dark:text-zinc-100 mb-6">
              {year}
              <span class="ml-2 text-sm font-normal text-zinc-500 dark:text-zinc-500">
                {postsByYear[year].length} 篇
              </span>
            </h2>

            <div>
              {postsByYear[year].map((post, index) => (
                <>
                  <PostCard post={post} />
                  {index < postsByYear[year].length - 1 && (
                    <div class="border-t border-dashed border-zinc-100 dark:border-zinc-800" />
                  )}
                </>
              ))}
            </div>
          </section>
        ))}
    </main>
  </div>
</BaseLayout>
