---
import { getCollection } from 'astro:content';
import PostCard from '@/components/blog/PostCard.astro';
import BaseLayout from '@/components/layouts/BaseLayout.astro';

const allPosts = await getCollection('blog');

const posts = allPosts
  .filter(({ data: { draft = false } }) => !draft)
  .sort(({ data: { date: dateA } }, { data: { date: dateB } }) => dateB.valueOf() - dateA.valueOf());

const postsByYear = posts.reduce(
  (acc, post) => {
    const year = new Date(post.data.date).getFullYear();
    if (!acc[year]) {
      acc[year] = [];
    }
    acc[year].push(post);
    return acc;
  },
  {} as Record<number, typeof posts>,
);

const years = Object.keys(postsByYear)
  .map(Number)
  .sort((a, b) => b - a);
---

<BaseLayout title="归档" description="所有归档文章">
  <div class="max-w-3xl mx-auto px-4 sm:px-6">
    <main class="space-y-16 sm:space-y-24">
      {years.map((year) => (
        <section class="relative flex flex-col mt-8 sm:mt-0 sm:flex-row gap-8 sm:gap-12">
          <div class="sm:w-24 shrink-0 sm:sticky sm:top-20 sm:self-start z-10">
            <h2 class="text-3xl sm:text-4xl font-bold font-major text-zinc-300 dark:text-zinc-700 select-none">
              {year}
            </h2>
            <span class="text-sm text-zinc-400 dark:text-zinc-500 mt-1 block sm:hidden">
              {postsByYear[year].length} 篇
            </span>
          </div>

          <div class="flex-1 relative sm:pl-8 space-y-8 pb-4">
            {postsByYear[year].map((post) => (
              <div class="relative group">
                <PostCard post={post} />
              </div>
            ))}
          </div>
        </section>
      ))}
    </main>
  </div>
</BaseLayout>
