---
import dayjs from 'dayjs';
import IconCalendar from '~icons/tabler/calendar';
import IconHash from '~icons/tabler/hash';

interface Props {
  title: string;
  date?: Date;
  tags?: string[];
  tldr?: string;
}

const { title, date, tags = [], tldr } = Astro.props;
---

<div>
  <h1 class="font-noto text-3xl sm:text-4xl font-bold tracking-tight text-zinc-900 dark:text-zinc-100 mb-4">{title}</h1>

  <div class="flex flex-wrap items-center gap-3 tabular-nums text-xs text-zinc-500 dark:text-zinc-400">
    {date && (
      <time datetime={date.toISOString()} class="flex items-center gap-1 tabular-nums">
        <IconCalendar></IconCalendar>
        <span>{dayjs(date).format("YYYY年MM月DD日")}</span>
      </time>
    )}

    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <a
            href={`/blog/tags/${tag}`}
            class="inline-flex items-center hover:text-zinc-900 dark:hover:text-zinc-200 transition-colors duration-300"
          >
            <IconHash />
            <span>{tag}</span>
          </a>
        ))}
      </div>
    )}
  </div>

  {tldr && (
    <div class="font-noto mt-8 text-zinc-700 dark:text-zinc-300 italic">
      {tldr}
    </div>
  )}
</div>
