---
import type { CollectionEntry } from 'astro:content';
import IconArrowLeft from '~icons/tabler/arrow-left';
import IconArrowRight from '~icons/tabler/arrow-right';

interface Props {
  prev: CollectionEntry<'blog'> | null;
  next: CollectionEntry<'blog'> | null;
}

const { prev, next } = Astro.props;
---

<nav class="flex justify-between gap-4 mb-12">
  {prev && (
    <a
      href={`/blog/${prev.id}`}
      class="group flex-1 p-4 rounded-lg transition-all duration-200"
    >
      <div class="text-sm text-zinc-500 dark:text-zinc-400 mb-2 flex items-center gap-1">
        <IconArrowLeft class="group-hover:-translate-x-0.5 transition-transform"></IconArrowLeft>
        <span>新一篇</span>
      </div>
      <div class="text-zinc-800 dark:text-zinc-200 font-medium line-clamp-2 group-hover:text-zinc-900 dark:group-hover:text-zinc-100 transition-colors">
        {prev.data.title}
      </div>
    </a>
  )}
  
  {next && (
    <a
      href={`/blog/${next.id}`}
      class="group flex-1 p-4 rounded-lg transition-all duration-200 text-right"
    >
      <div class="text-sm text-zinc-500 dark:text-zinc-400 mb-2 flex items-center justify-end gap-1">
        <span>旧一篇</span>
        <IconArrowRight class="group-hover:translate-x-0.5 transition-transform"></IconArrowRight>
      </div>
      <div class="text-zinc-800 dark:text-zinc-200 font-medium line-clamp-2 group-hover:text-zinc-900 dark:group-hover:text-zinc-100 transition-colors">
        {next.data.title}
      </div>
    </a>
  )}
</nav>
