---
import IconGitHub from '~icons/tabler/brand-github';
import IconBrandSafari from '~icons/tabler/brand-safari';
import IconX from '~icons/tabler/brand-x';
import IconRSS from '~icons/tabler/rss';
---

<footer class="py-6 border-t border-zinc-200 dark:border-zinc-800 bg-zinc-50 dark:bg-zinc-950">
  <div class="max-w-4xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-center gap-4 mb-4">
      <a
        href="https://github.com/coderfee"
        title="GitHub"
        aria-label="GitHub"
        rel="noopener"
        target="_blank"
        class="flex items-center justify-center p-2 rounded-lg text-zinc-500 hover:text-zinc-800 dark:text-zinc-400 dark:hover:text-zinc-200 hover:bg-zinc-100 dark:hover:bg-zinc-800/50
                transition-all duration-300"
      >
        <IconGitHub class="text-xl" />
      </a>
      <a
        href="https://twitter.com/coderfee"
        title="Twitter"
        aria-label="Twitter"
        rel="noopener"
        target="_blank"
        class="flex items-center justify-center p-2 rounded-lg text-zinc-500 hover:text-zinc-800 dark:text-zinc-400 dark:hover:text-zinc-200 hover:bg-zinc-100 dark:hover:bg-zinc-800/50
                transition-all duration-300"
      >
        <IconX class="text-xl" />
      </a>
      <a
        href="/rss.xml"
        title="RSS"
        aria-label="RSS"
        rel="noopener"
        target="_blank"
        class="flex items-center justify-center p-2 rounded-lg text-zinc-500 hover:text-zinc-800 dark:text-zinc-400 dark:hover:text-zinc-200 hover:bg-zinc-100 dark:hover:bg-zinc-800/50
                transition-all duration-300"
      >
        <IconRSS class="text-xl" />
      </a>
      <a
        href="/sitemap-0.xml"
        title="站点地图"
        aria-label="站点地图"
        rel="noopener"
        target="_blank"
        class="flex items-center justify-center p-2 rounded-lg text-zinc-500 hover:text-zinc-800 dark:text-zinc-400 dark:hover:text-zinc-200 hover:bg-zinc-100 dark:hover:bg-zinc-800/50
                transition-all duration-300"
      >
        <IconBrandSafari class="text-xl" />
      </a>
    </div>

    <div class="flex items-center justify-center text-xs text-zinc-500 dark:text-zinc-400 gap-3">
      <a
        href="https://beian.miit.gov.cn/"
        target="_blank"
        class="hover:text-zinc-800 dark:hover:text-zinc-200 hover:underline transition-colors"
      >
        京ICP备19050952号-1
      </a>
      <span>·</span>
      <span class="normal-nums">© 2016 - {new Date().getFullYear()}</span>
    </div>
  </div>
</footer>
