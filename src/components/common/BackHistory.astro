---
import IconArrowLeft from '~icons/tabler/arrow-left';

const { label, to } = Astro.props;
---

{ to ? (
  <a
    href={to}
    class="group inline-flex items-center justify-center gap-1.5 text-sm text-zinc-500 dark:text-zinc-400 
    hover:text-zinc-800 dark:hover:text-zinc-200 transition-colors cursor-pointer"
  >
    <IconArrowLeft class="group-hover:-translate-x-0.5 transition-transform" />
    {label}
  </a>
) : (
  <a
    onclick="history.back()"
    class="group inline-flex items-center justify-center gap-1.5 text-sm text-zinc-500 dark:text-zinc-400 
    hover:text-zinc-800 dark:hover:text-zinc-200 transition-colors cursor-pointer"
  >
    <IconArrowLeft class="group-hover:-translate-x-0.5 transition-transform" />
    {label}
  </a>
)}
